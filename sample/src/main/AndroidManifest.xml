<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.ilife.sample.camerapreview"
    >

  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <uses-feature
      android:name="android.hardware.camera"
      android:required="true"
      />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".NormalActivity"
        android:label="@string/normal_sample"
        android:theme="@style/AppTheme.NoActionBar"
        >
    </activity>
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".CountdownActivity"
        android:label="@string/countdown_sample"
        android:theme="@style/AppTheme.NoActionBar"
        >
    </activity>
    <activity
        android:name=".WechatActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:label="@string/title_activity_wechat"
        android:theme="@style/FullscreenTheme"
        >
    </activity>
  </application>

</manifest>